---
import { ViewTransitions } from "astro:transitions";
import SideBar from "@/components-astro/SideBar.astro";
import '@/styles/globals.css'
import Footer from "@/components-astro/footer.astro";

interface Props {
  title : string;
}

const { title } = Astro.props;
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/Logo-PSINet-ico.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<ViewTransitions />
	</head>
	<body>
    <div class="flex h-screen">
      <!-- Incluimos el SideBar -->
      <SideBar />

      <!-- Contenido principal centrado -->
      <main class="flex-1 overflow-auto p-4  items-center justify-center">
        
          <slot />
          <!-- Footer que debe ir al final de la pagina  -->
          <div class="mt-16">
            <Footer />
          </div>
      </main>
    </div>
    
	</body>
</html>